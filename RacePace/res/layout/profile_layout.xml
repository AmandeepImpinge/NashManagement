<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <com.runtwo.main.ActionBarRun
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <RelativeLayout
        android:id="@+id/upper_lay_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/img_container"
            android:layout_width="match_parent"
            android:layout_height="120dp" >

            <ImageView
                android:id="@+id/cover_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cover_img" />

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/default_user_image_square" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/uppper_name_container"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/img_container"
            android:background="@color/topbar_blue_back_color" >

            <com.runtwo.customfonts.TextViewHelveticaBdcnZero
                android:id="@+id/username_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toLeftOf="@+id/miles_container"
                android:text="PAT NASH"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/miles_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:orientation="horizontal" >

                <com.runtwo.customfonts.TextViewHelveticaBdcnZero
                    android:id="@+id/no_miles_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:maxLines="1"
                    android:text="5911"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <com.runtwo.customfonts.TextViewHelveticaBdcnZero
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:maxLines="1"
                    android:text="MILES RUN"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/follow_container"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/uppper_name_container"
            android:background="@color/lightest_grey"
            android:weightSum="90" >

            <LinearLayout
                android:id="@+id/followers_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:gravity="center|center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/followers_icon" />

                <com.runtwo.customfonts.TextViewHelveticaLtZero
                    android:id="@+id/no_followers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="51"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <com.runtwo.customfonts.TextViewHelveticaLtZero
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:text="FOLLOWERS"
                    android:textColor="@android:color/black"
                    android:textSize="10sp" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/light_grey_text_color" />

            <LinearLayout
                android:id="@+id/following_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:gravity="center|center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/following_icon" />

                <com.runtwo.customfonts.TextViewHelveticaLtZero
                    android:id="@+id/no_followings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="72"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <com.runtwo.customfonts.TextViewHelveticaLtZero
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:text="FOLLOWING"
                    android:textColor="@android:color/black"
                    android:textSize="10sp" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/light_grey_text_color" />

            <LinearLayout
                android:id="@+id/groups_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:gravity="center|center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/groups_icon" />

                <com.runtwo.customfonts.TextViewHelveticaLtZero
                    android:id="@+id/no_groups"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="13"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <com.runtwo.customfonts.TextViewHelveticaLtZero
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:text="GROUPS"
                    android:textColor="@android:color/black"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/follow_container"
            android:background="@color/light_grey_text_color" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/custom_tabs"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:weightSum="100" >

            <LinearLayout
                android:id="@+id/wall_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/cus_tab_img1"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:src="@drawable/wall_icon_selected" />

                <TextView
                    android:id="@+id/cus_tab_txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Wall"
                    android:textColor="@android:color/black"
                    android:textSize="11sp" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:background="@color/light_grey_text_color" />

            <LinearLayout
                android:id="@+id/photos_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/cus_tab_img2"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:src="@drawable/photo_icon_unselected" />

                <TextView
                    android:id="@+id/cus_tab_txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Photos"
                    android:textColor="@android:color/black"
                    android:textSize="11sp" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:background="@color/light_grey_text_color" />

            <LinearLayout
                android:id="@+id/me_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/cus_tab_img3"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:src="@drawable/me_icon_unselected" />

                <TextView
                    android:id="@+id/cus_tab_txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Me"
                    android:textColor="@android:color/black"
                    android:textSize="11sp" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:background="@color/light_grey_text_color" />

            <LinearLayout
                android:id="@+id/together_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/cus_tab_img4"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:src="@drawable/together_unselected" />

                <TextView
                    android:id="@+id/cus_tab_txt4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="2gether"
                    android:textColor="@android:color/black"
                    android:textSize="11sp" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:background="@color/light_grey_text_color" />

            <LinearLayout
                android:id="@+id/workout_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/cus_tab_img5"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:src="@drawable/workout_unselected" />

                <TextView
                    android:id="@+id/cus_tab_txt5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Workout"
                    android:textColor="@android:color/black"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_below="@+id/custom_tabs"
            android:background="@color/light_grey_text_color" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_below="@+id/custom_tabs"
            android:layout_marginTop="1dp"
            android:background="@color/light_grey_text_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/wall_lay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/list_grid_container_back"
                    android:weightSum="100" >

                    <ImageView
                        android:id="@+id/list_btn_wall"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="49.5"
                        android:src="@drawable/list_btn_selected" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="6dp"
                        android:layout_marginTop="6dp"
                        android:background="@color/gird_list_container_border" />

                    <ImageView
                        android:id="@+id/grid_btn_wall"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="49.5"
                        android:src="@drawable/grid_btn_unselected" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Wall"
                    android:textColor="@color/light_grey_text_color"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/photos_lay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/list_grid_container_back"
                    android:weightSum="100" >

                    <ImageView
                        android:id="@+id/list_btn_photos"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="49.5"
                        android:src="@drawable/list_btn_selected" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="6dp"
                        android:layout_marginTop="6dp"
                        android:background="@color/gird_list_container_border" />

                    <ImageView
                        android:id="@+id/grid_btn_photos"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="49.5"
                        android:src="@drawable/grid_btn_unselected" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Photos"
                    android:textColor="@color/light_grey_text_color"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/me_lay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/list_grid_container_back"
                    android:weightSum="100" >

                    <ImageView
                        android:id="@+id/list_btn_me"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="49.5"
                        android:src="@drawable/list_btn_selected" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="6dp"
                        android:layout_marginTop="6dp"
                        android:background="@color/gird_list_container_border" />

                    <ImageView
                        android:id="@+id/grid_btn_me"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="49.5"
                        android:src="@drawable/grid_btn_unselected" />
                </LinearLayout>

                <com.runtwo.utils.CustomScrollView
                    android:id="@+id/me_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:overScrollMode="never"
                    android:layout_marginTop="6dp" >

                    <LinearLayout
                        android:id="@+id/achievement_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >
                   	
                    </LinearLayout>
                </com.runtwo.utils.CustomScrollView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/together_lay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/list_grid_container_back"
                    android:weightSum="100" >

                    <ImageView
                        android:id="@+id/list_btn_together"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="49.5"
                        android:src="@drawable/list_btn_selected" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="6dp"
                        android:layout_marginTop="6dp"
                        android:background="@color/gird_list_container_border" />

                    <ImageView
                        android:id="@+id/grid_btn_together"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="49.5"
                        android:src="@drawable/grid_btn_unselected" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Together"
                    android:textColor="@color/light_grey_text_color"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/workout_lay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/list_grid_container_back"
                    android:weightSum="100" >

                    <ImageView
                        android:id="@+id/list_btn_workout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="49.5"
                        android:src="@drawable/list_btn_selected" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="6dp"
                        android:layout_marginTop="6dp"
                        android:background="@color/gird_list_container_border" />

                    <ImageView
                        android:id="@+id/grid_btn_workout"
                        android:layout_width="
                        0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="49.5"
                        android:src="@drawable/grid_btn_unselected" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Workout"
                    android:textColor="@color/light_grey_text_color"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Tab Content Here -->
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>