<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        layout="@layout/action_bar_user_info" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:weightSum="90" >

        <com.runtwo.customfonts.TextViewHelveticaBdcnZero
            android:id="@+id/my_map"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:background="@color/run_usa_top_tab_back"
            android:gravity="center"
            android:text="MY MAP"
            android:textSize="13sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#033F7C" />

        <com.runtwo.customfonts.TextViewHelveticaBdcnZero
            android:id="@+id/all_run"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:background="@color/run_usa_top_tab_back"
            android:gravity="center"
            android:text="ALL RUN 2"
            android:textSize="13sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#033F7C" />

        <com.runtwo.customfonts.TextViewHelveticaBdcnZero
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:background="@color/run_usa_top_tab_back"
            android:gravity="center"
            android:text="SEARCH"
            android:textSize="13sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/map_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/progress_container" >

            <fragment
                android:id="@+id/map_usa"
                android:layout_width="match_parent"
                android:layout_height="match_parent" 
                android:name="com.racepace.main.RunUsaFragment"
                class="com.google.android.gms.maps.SupportMapFragment"
                />
            
            <LinearLayout 
                android:id="@+id/map_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:orientation="horizontal"
                />
            
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/progress_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="8dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/progress_back"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >

                <ProgressBar
                    android:id="@+id/miles_bar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_centerInParent="true"
                    android:progress="20"
                    android:progressDrawable="@drawable/progress_drawable" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:weightSum="100" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="16" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="8dp"
                            android:layout_marginLeft="5dp"
                            android:background="@color/lightest_grey" />

                        <TextView
                            android:id="@+id/first_div_name"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:text="1M"
                            android:textColor="@color/topbar_blue_back_color"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="8dp"
                            android:background="@color/lightest_grey" />

                        <TextView
                            android:id="@+id/sec_div_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20M"
                            android:textColor="@color/topbar_blue_back_color"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="8dp"
                            android:background="@color/lightest_grey" />

                        <TextView
                            android:id="@+id/third_div_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="40M"
                            android:textColor="@color/topbar_blue_back_color"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="8dp"
                            android:background="@color/lightest_grey" />

                        <TextView
                            android:id="@+id/fourth_div_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="60M"
                            android:textColor="@color/topbar_blue_back_color"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="24" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="8dp"
                            android:background="@color/lightest_grey" />

                        <TextView
                            android:id="@+id/fifth_div_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="80M"
                            android:textColor="@color/topbar_blue_back_color"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:orientation="vertical" >

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="8dp"
                            android:layout_marginRight="5dp"
                            android:background="@color/lightest_grey" />

                        <TextView
                            android:id="@+id/last_div_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100M"
                            android:textColor="@color/topbar_blue_back_color"
                            android:textSize="12sp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>