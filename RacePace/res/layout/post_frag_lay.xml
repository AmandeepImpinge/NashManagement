<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.runtwo.main.ActionBarRun
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <com.runtwo.customfonts.TextViewHelveticaBdcnZero
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="ADD NEW POST"
            android:textColor="@color/topbar_blue_back_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.runtwo.customfonts.EditTextHelveticaLtZero
            android:id="@+id/text_box"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="5dp"
            android:background="@color/post_text_box_back"
            android:hint="Enter your text here"
            android:padding="8dp"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/attach_photo_back"
            android:gravity="center_vertical|right"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/attch_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="8dp" >

                <ImageView
                    android:id="@+id/post_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/attachphotoicon" />

                <com.runtwo.customfonts.TextViewHelveticaLtZero
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="Attach Photo"
                    android:textColor="@color/topbar_blue_back_color"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:baselineAligned="false"
            android:weightSum="90" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:gravity="left|center_vertical"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/post_run_check"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:checked="true"
                    android:button="@drawable/checkbox_selector" />

                <TextView
                    android:id="@+id/postrun_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="Post in Run2"
                    android:textColor="@android:color/black"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:gravity="left|center_vertical"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/post_fb_check"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:button="@drawable/checkbox_selector" />

                <TextView
                    android:id="@+id/postfb_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="Post in Facebook"
                    android:textColor="@android:color/black"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:gravity="left|center_vertical"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/post_twitter_check"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:button="@drawable/checkbox_selector" />

                <TextView
                    android:id="@+id/posttwitter_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="Post in Twitter"
                    android:textColor="@android:color/black"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>

        <com.runtwo.customfonts.TextViewHelveticaLtZero
            android:id="@+id/submit_txt"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="25dp"
            android:background="@color/topbar_blue_back_color"
            android:gravity="center"
            android:text="Submit"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <com.runtwo.customfonts.TextViewHelveticaLtZero
            android:id="@+id/cancel_txt"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@color/cancel_btn_back"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>